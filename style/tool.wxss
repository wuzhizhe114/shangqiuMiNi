  margin: 0 10rpx;
}

/* 行高 */
.lh-72 {
  line-height: 72rpx;
}

/* 盒模型 */
.dis-in {
  display: inline;
}

/* 盒子阴影 */
.box-sh {
  box-shadow: 1px 0 3px 0 #acacac;
}
.box-sh-all {
  box-shadow: 0px 0 5px 0 #acacac;
}

/* 盒子内容溢出处理 */
.of-hidden {
  overflow: hidden
}
.of-x-scroll {
  overflow-x: scroll;
}

/* 圆角边框 */
.br-6 {
  border-radius: 6rpx;
}
.br-half {
  border-radius: 50%;
}

/* 单行文本溢出省略 */
.text-ell {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* flex 自适应 */
.d-fl {
  display: flex;
}
.al-center {
  align-items: center;
}
.jc-center {
  justify-content: center;
}
.jc-space-b {
  justify-content: space-between;
}
.fl-1 {
  flex: 1;
}
.fl-col {
  flex-direction: column;
}