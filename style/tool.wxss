.text-center {
  text-align: center;
}
.text-right {
  text-align: right;
}

/* 定位 */
.pr {
  position: relative;
}

/* 内边距 */
.pd-30 {
  padding: 30rpx;
}
.pd-lr-30 {
  padding: 0 30rpx;
}
.pd-lr-20 {
  padding: 0 20rpx;
}
.pd-tb-26 {
  padding: 26rpx 0;
}
.pd-tb-20 {
  padding: 20rpx 0;
}
.pd-tb-10 {
